[user]
	name = rob
  email = un@rob.mx
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch

	l = "!. ~/.dotfiles/bin/git_helpers && pretty_git_log"
	todo = "! ~/.dotfiles/bin/git_todo"
[merge]
	tool = opendiff
	summary = true
[core]
	excludesfile = ~/.gitignore
	editor = nano
	quotepath = false
	autocrlf = input
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
[push]
	default = current

[hub]
protocol = https

[credential]
	helper = osxkeychain
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
